syntax enable

set esckeys
set laststatus=2

set tabstop=2 softtabstop=2 shiftwidth=2
set expandtab
set smartindent

set number
set nowrap
set smartcase
set incsearch

set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

set colorcolumn=81
highlight ColorColumn ctermbg=0 guibg=lightgrey
